<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cringe.appathon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Start" />
        <activity
            android:name=".PlantList"
            android:label="@string/title_activity_plant_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RackSearch"
            android:label="@string/title_activity_rack_search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".QRCode"
            android:label="@string/title_activity_qrcode"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MonitorPlant"
            android:label="@string/title_activity_monitor_plant"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>